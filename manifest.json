{
  "manifest_version": 2,

  "name": "Alpheios v2",
  "description": "This extension enables the use of Alpheios morphology library",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Alpheios",
    "default_popup":"menu.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "http://*/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "web_accessible_resources": [
    "ara-sal-ids.json",
    "per-stg-defs.json",
    "grc-lsj-defs.json"
  ]
}
